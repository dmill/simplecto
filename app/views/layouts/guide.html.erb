<html>
  <head>
    <title>SimpleCTO</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'guide', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery.min', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Roboto+Slab:100,300,400,700" rel="stylesheet">
    <%= favicon_link_tag %>

    <meta property="og:url"                content="https://www.simplecto.com" />
    <meta property="og:title"              content="SimpleCTO's Guide to Web Applications" />
    <meta property="og:description"        content="Best Practices on Hiring, Designing, and Managing the Development of a Software Product" />
    <meta property="og:image"              content="https://simplecto.com/images/booklet.png" />
