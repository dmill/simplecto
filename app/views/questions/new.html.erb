<div id="question-new">
<%= render partial: "layouts/navigation_main" %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 centered">
      <h2>Ask an Expert</h2>

      <%= form_for @question, url: {action: "create"}, html: {class: "form"} do |f| %>
        <%= f.text_field :title, placeholder: "Subject" %>
        <%= f.text_area :question_text, placeholder: "Describe the issue" %>
        <%= f.submit "Get an Answer", class: "button pill red" %>
      <% end %>
    </div>
  </div>
</div>
