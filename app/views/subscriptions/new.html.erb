<% if !current_user.subscribed %>
  <%= form_tag subscriptions_path do %>
    <%= hidden_field_tag "product", "monthly_subscription" %>
    <script
      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-amount="15000"
      data-name="SimpleCTO"
      data-description="Monthly Platform Subscription"
      data-zip-code="true"
      data-locale="auto"
      data-email=<%= current_user.email %>
      data-panel-label="Subscribe"
      data-label="Purchase Now">
    </script>
  <% end %>
<% else %>
  <h1>You are Already Subscribed</h1>
<% end %>
